{
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "parser": "babel-eslint"
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "plugins": ["html"],
    "settings": {
    "html/html-extensions": [".html"],
    "html/report-bad-indent": "error"
    },
    "rules": {
        "indent": ["warn", 2, { "SwitchCase": 1 }],
        "multiline-ternary": ["warn", "always-multiline"]
      }
  }